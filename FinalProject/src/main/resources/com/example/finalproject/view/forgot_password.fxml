<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalproject.controller.ForgotPasswordController"
      style="-fx-padding:20;">
    <Label text="Forgot Password" style="-fx-font-size:20;-fx-font-weight:bold;"/>
    <TextField fx:id="emailField" promptText="Enter your email"/>
    <Button text="Send OTP" onAction="#onSendOtp"/>
    <TextField fx:id="otpField" promptText="Enter OTP"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password"/>
    <Button text="Reset Password" onAction="#onResetPassword"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>
