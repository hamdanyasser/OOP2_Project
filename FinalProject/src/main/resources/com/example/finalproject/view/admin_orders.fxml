    <!-- Admin Content -->
    <center>
        <VBox spacing="24" styleClass="admin-container" style="-fx-padding: 32;">

            <!-- Header & Filters -->
            <VBox spacing="16">
                <!-- Header -->
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <VBox spacing="8">
                        <Label text="Orders Overview"
                               style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #2d3748;"/>
                        <Label text="Track and manage customer orders"
                               style="-fx-font-size: 15px; -fx-text-fill: #718096;"/>
                    </VBox>
                </HBox>

                <!-- Search & Filter Bar -->
                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="white-card"
                      style="-fx-padding: 16;">
                    <Label text="ðŸ”" style="-fx-font-size: 18px;"/>
