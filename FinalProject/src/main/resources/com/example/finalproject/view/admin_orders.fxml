                              prefWidth="250"/>

                    <Label text="Status:" style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
                    <ComboBox fx:id="statusFilter" prefWidth="150"/>

                    <Button text="Apply"
                           onAction="#onApplyFilter"
                           styleClass="button-secondary"
                           prefHeight="40"/>

                    <Button text="Reset"
                           onAction="#onResetFilter"
                           prefHeight="40"/>
                </HBox>
            </VBox>

            <!-- Orders Table Card -->
            <VBox spacing="16" styleClass="white-card">
                <Label text="All Orders"
                       styleClass="section-title"
                       style="-fx-font-size: 20px;"/>

                <TableView fx:id="orderTable" prefHeight="450" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colId" text="Order #" prefWidth="100"/>
                        <TableColumn fx:id="colUser" text="Customer ID" prefWidth="120"/>
                        <TableColumn fx:id="colTotal" text="Total Amount" prefWidth="140"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                        <TableColumn fx:id="colDate" text="Order Date" prefWidth="200"/>
                    </columns>
                </TableView>

                <!-- Action Buttons Row -->
                <HBox spacing="12" alignment="CENTER_LEFT">
