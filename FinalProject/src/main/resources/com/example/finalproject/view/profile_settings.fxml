<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finalproject.controller.ProfileSettingsController"
            prefWidth="600" prefHeight="400"
            stylesheets="@style.css">

    <!-- ðŸ”¹ Top Bar -->
    <top>
        <HBox spacing="20" style="-fx-background-color:#0078D7;-fx-padding:12;">
            <Label text="ðŸ‘¤ Profile Settings"
                   style="-fx-text-fill:white;-fx-font-size:18;-fx-font-weight:bold;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="â¬… Back" onAction="#onBack"
                    style="-fx-background-color:white;-fx-text-fill:#0078D7;-fx-font-weight:bold;"/>
            <Button text="Logout" onAction="#onLogout"
                    style="-fx-background-color:#d9534f;-fx-text-fill:white;-fx-font-weight:bold;"/>
        </HBox>
    </top>

    <!-- ðŸ”¹ Center Form -->
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER" style="-fx-padding:20;">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

            <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Old Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <PasswordField fx:id="oldPassField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="New Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="newPassField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Button text="ðŸ’¾ Save Changes" GridPane.rowIndex="5" GridPane.columnIndex="1"
                    onAction="#onSave"
                    style="-fx-background-color:#0078D7; -fx-text-fill:white; -fx-font-weight:bold;"/>

            <Label fx:id="msgLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"
                   style="-fx-text-fill:red; -fx-font-weight:bold;"/>
        </GridPane>
    </center>

</BorderPane>
