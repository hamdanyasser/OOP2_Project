<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finalproject.controller.ProfileSettingsController"
            prefWidth="900" prefHeight="650"
            stylesheets="@style.css">

    <!-- Modern Navigation Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="navbar">
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="ðŸ‘¤" style="-fx-font-size: 28px;"/>
                <Label text="Profile Settings" styleClass="navbar-title"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="â† Back"
                   onAction="#onBack"
                   style="-fx-background-color: rgba(255,255,255,0.2);"/>

            <Button text="ðŸšª Logout"
                   onAction="#onLogout"
                   style="-fx-background-color: rgba(245,101,101,0.3); -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Profile Content -->
    <center>
        <VBox alignment="CENTER" spacing="24" styleClass="admin-container" style="-fx-padding: 40;">

            <!-- Profile Card -->
            <VBox spacing="28" styleClass="white-card" maxWidth="600" style="-fx-padding: 40;">

                <!-- Header -->
                <VBox spacing="8" alignment="CENTER">
                    <Label text="Profile Information"
                           styleClass="section-title"
                           style="-fx-font-size: 24px;"/>
                    <Label text="Update your account information and password"
                           style="-fx-font-size: 14px; -fx-text-fill: #718096;"/>
                </VBox>

                <Separator/>

                <!-- Form -->
                <VBox spacing="20">

                    <!-- Full Name -->
                    <VBox spacing="8">
                        <Label text="Full Name" style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                        <TextField fx:id="nameField"
                                  promptText="Enter your full name"
                                  styleClass="text-field"/>
                    </VBox>

                    <!-- Email (Read-only) -->
                    <VBox spacing="8">
                        <Label text="Email Address" style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                        <TextField fx:id="emailField"
                                  editable="false"
                                  styleClass="text-field"
                                  style="-fx-background-color: #f7fafc; -fx-opacity: 0.8;"/>
                        <Label text="Email cannot be changed"
                               style="-fx-font-size: 11px; -fx-text-fill: #a0aec0;"/>
                    </VBox>

                    <!-- Address -->
                    <VBox spacing="8">
                        <Label text="Shipping Address" style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                        <TextField fx:id="addressField"
                                  promptText="Enter your shipping address"
                                  styleClass="text-field"/>
                    </VBox>

                    <Separator/>

                    <!-- Password Section Header -->
                    <Label text="Change Password"
                           style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #2d3748;"/>

                    <!-- Old Password -->
                    <VBox spacing="8">
                        <Label text="Current Password" style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                        <PasswordField fx:id="oldPassField"
                                      promptText="Enter current password"
                                      styleClass="password-field"/>
                    </VBox>

                    <!-- New Password -->
                    <VBox spacing="8">
                        <Label text="New Password" style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                        <PasswordField fx:id="newPassField"
                                      promptText="Enter new password"
                                      styleClass="password-field"/>
                        <Label text="Leave blank to keep current password"
                               style="-fx-font-size: 11px; -fx-text-fill: #a0aec0;"/>
                    </VBox>

                </VBox>

                <!-- Message Label -->
                <Label fx:id="msgLabel" styleClass="success-label" visible="false" managed="false"/>

                <Separator/>

                <!-- Save Button -->
                <Button text="ðŸ’¾ Save Changes"
                       onAction="#onSave"
                       styleClass="button-success"
                       prefHeight="50"
                       style="-fx-font-size: 16px;"/>

            </VBox>

        </VBox>
    </center>

</BorderPane>
