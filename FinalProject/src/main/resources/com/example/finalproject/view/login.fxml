<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.finalproject.controller.LoginController"
           prefWidth="900" prefHeight="650"
           stylesheets="@style.css"
           fx:id="mainContainer">

    <!-- Main Container with Centered Layout -->
    <VBox alignment="CENTER" spacing="0">

        <!-- Modern Auth Card -->
        <VBox alignment="CENTER" spacing="20" maxWidth="420" styleClass="auth-card">

            <!-- Welcome Section -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Welcome Back!" styleClass="title-label" style="-fx-text-fill: #667eea;"/>
                <Label text="Sign in to continue to ShopEase" styleClass="subtitle-label"
                       style="-fx-font-size: 14px; -fx-text-fill: #718096;"/>
            </VBox>

            <!-- Spacer -->
            <Region prefHeight="10"/>

            <!-- Email Field with Icon -->
            <VBox spacing="6">
                <Label text="Email Address" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                <TextField fx:id="emailField"
                          promptText="Enter your email"
                          styleClass="text-field"
                          prefWidth="350"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="6">
                <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                <PasswordField fx:id="passwordField"
                              promptText="Enter your password"
                              styleClass="password-field"
                              prefWidth="350"/>
            </VBox>

            <!-- Error Message -->
            <Label fx:id="msgLabel" styleClass="error-label" visible="false" managed="false"/>

            <!-- Login Button -->
            <Button text="Sign In"
                    onAction="#onLogin"
                    prefWidth="350"
                    prefHeight="45"
                    style="-fx-font-size: 15px;"/>

            <!-- Divider with Text -->
            <HBox alignment="CENTER" spacing="10" prefWidth="350">
                <Separator HBox.hgrow="ALWAYS"/>
                <Label text="or" style="-fx-text-fill: #a0aec0; -fx-font-size: 12px;"/>
                <Separator HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Secondary Actions -->
            <VBox alignment="CENTER" spacing="12">
                <Hyperlink text="Forgot your password?"
                          onAction="#onForgotPassword"
                          style="-fx-font-size: 13px;"/>

                <HBox alignment="CENTER" spacing="6">
                    <Label text="Don't have an account?"
                           style="-fx-text-fill: #4a5568; -fx-font-size: 13px;"/>
                    <Hyperlink text="Create Account"
                              onAction="#goRegister"
                              style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
                </HBox>
            </VBox>

        </VBox>

        <!-- Footer -->
        <Label text="Â© 2025 ShopEase. All rights reserved."
               style="-fx-text-fill: rgba(255, 255, 255, 0.8); -fx-font-size: 12px; -fx-padding: 20 0 0 0;"/>

    </VBox>

</StackPane>
