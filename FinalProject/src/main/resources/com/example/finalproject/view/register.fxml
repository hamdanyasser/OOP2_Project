<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.finalproject.controller.RegisterController"
           prefWidth="900" prefHeight="700"
           stylesheets="@style.css"
           fx:id="mainContainer">

    <!-- Main Container with Centered Layout -->
    <VBox alignment="CENTER" spacing="0">

        <!-- Modern Auth Card -->
        <VBox alignment="CENTER" spacing="18" maxWidth="450" styleClass="auth-card">

            <!-- Welcome Section -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Create Account" styleClass="title-label" style="-fx-text-fill: #667eea;"/>
                <Label text="Join ShopEase and start shopping today" styleClass="subtitle-label"
                       style="-fx-font-size: 14px; -fx-text-fill: #718096;"/>
            </VBox>

            <!-- Spacer -->
            <Region prefHeight="8"/>

            <!-- Full Name Field -->
            <VBox spacing="6">
                <Label text="Full Name" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                <TextField fx:id="nameField"
                          promptText="Enter your full name"
                          styleClass="text-field"
                          prefWidth="370"/>
            </VBox>

            <!-- Email Field -->
            <VBox spacing="6">
                <Label text="Email Address" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                <TextField fx:id="emailField"
                          promptText="Enter your email"
                          styleClass="text-field"
                          prefWidth="370"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="6">
                <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                <PasswordField fx:id="passwordField"
                              promptText="Create a strong password"
                              styleClass="password-field"
                              prefWidth="370"/>
            </VBox>

            <!-- Address Field -->
            <VBox spacing="6">
                <Label text="Shipping Address" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
                <TextField fx:id="addressField"
                          promptText="Enter your shipping address"
                          styleClass="text-field"
                          prefWidth="370"/>
            </VBox>

            <!-- Error Message -->
            <Label fx:id="msgLabel" styleClass="error-label" visible="false" managed="false"/>

            <!-- Register Button -->
            <Button text="Create Account"
                    onAction="#onRegister"
                    prefWidth="370"
                    prefHeight="45"
                    style="-fx-font-size: 15px;"/>

            <!-- Divider -->
            <HBox alignment="CENTER" spacing="10" prefWidth="370">
                <Separator HBox.hgrow="ALWAYS"/>
                <Label text="or" style="-fx-text-fill: #a0aec0; -fx-font-size: 12px;"/>
                <Separator HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Back to Login -->
            <HBox alignment="CENTER" spacing="6">
                <Label text="Already have an account?"
                       style="-fx-text-fill: #4a5568; -fx-font-size: 13px;"/>
                <Hyperlink text="Sign In"
                          onAction="#goLogin"
                          style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
            </HBox>

        </VBox>

        <!-- Footer -->
        <Label text="Â© 2025 ShopEase. All rights reserved."
               style="-fx-text-fill: rgba(255, 255, 255, 0.8); -fx-font-size: 12px; -fx-padding: 20 0 0 0;"/>

    </VBox>

</StackPane>
