<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finalproject.controller.AdminProductsController"
            prefWidth="900" prefHeight="600"
            stylesheets="@style.css">

    <VBox spacing="10"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- ðŸ›’ Title -->
        <Label text="ðŸ›’ Product Management" styleClass="title-label"/>

        <!-- ðŸ”¹ Toolbar with Orders button -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Add Product" onAction="#onAdd" />
            <Button text="Edit Product" onAction="#onEdit" />
            <Button text="Delete Product" onAction="#onDelete" />
            <Button text="â­ Manage Reviews" onAction="#onManageReviews" />
            <!-- âœ… New Orders Button -->
            <Button text="ðŸ’¸ Manage Promotions" onAction="#onPromotions"/>

            <Button text="View Orders" onAction="#onOrders" />

            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogout" />
        </HBox>

        <!-- ðŸ“‹ Table -->
        <TableView fx:id="table" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="150"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
                <TableColumn fx:id="colImage" text="Image" prefWidth="100"/>
            </columns>
        </TableView>

        <Label fx:id="msgLabel" styleClass="error-label"/>
    </VBox>
</AnchorPane>
