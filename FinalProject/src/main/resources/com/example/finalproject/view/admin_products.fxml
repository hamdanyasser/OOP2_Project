<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finalproject.controller.AdminProductsController"
            prefWidth="1200" prefHeight="750"
            stylesheets="@style.css">

    <!-- Modern Admin Navigation Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="navbar">
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="ðŸ›’" style="-fx-font-size: 28px;"/>
                <Label text="Product Management" styleClass="navbar-title"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Quick Actions -->
            <Button text="ðŸ“¦ Orders"
                   onAction="#onOrders"
                   style="-fx-background-color: rgba(255,255,255,0.2);"/>

            <Button text="â­ Reviews"
                   onAction="#onManageReviews"
                   style="-fx-background-color: rgba(255,255,255,0.2);"/>

            <Button text="ðŸ’¸ Promotions"
                   onAction="#onPromotions"
                   style="-fx-background-color: rgba(255,255,255,0.2);"/>

            <Button text="ðŸšª Logout"
                   onAction="#onLogout"
                   style="-fx-background-color: rgba(245,101,101,0.3); -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Admin Content -->
    <center>
        <VBox spacing="24" styleClass="admin-container" style="-fx-padding: 32;">

            <!-- Header & Actions -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <VBox spacing="8">
                    <Label text="Products Overview"
                           style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #2d3748;"/>
                    <Label text="Manage your product inventory"
                           style="-fx-font-size: 15px; -fx-text-fill: #718096;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Action Buttons -->
                <HBox spacing="12">
                    <Button text="âž• Add Product"
                           onAction="#onAdd"
                           styleClass="button-success"
                           prefHeight="45"
                           prefWidth="140"/>

                    <Button text="âœï¸ Edit"
                           onAction="#onEdit"
                           styleClass="button-secondary"
                           prefHeight="45"
                           prefWidth="100"/>

                    <Button text="ðŸ—‘ï¸ Delete"
                           onAction="#onDelete"
                           styleClass="button-danger"
                           prefHeight="45"
                           prefWidth="100"/>
                </HBox>
            </HBox>

            <!-- Products Table Card -->
            <VBox spacing="16" styleClass="white-card">
                <Label text="All Products"
                       styleClass="section-title"
                       style="-fx-font-size: 20px;"/>

                <TableView fx:id="table" prefHeight="500" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colName" text="Product Name" prefWidth="250"/>
                        <TableColumn fx:id="colCategory" text="Category" prefWidth="180"/>
                        <TableColumn fx:id="colPrice" text="Price ($)" prefWidth="120"/>
                        <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
                        <TableColumn fx:id="colImage" text="Image Path" prefWidth="200"/>
                    </columns>
                </TableView>

                <!-- Message Label -->
                <Label fx:id="msgLabel" styleClass="success-label" visible="false" managed="false"/>

            </VBox>

        </VBox>
    </center>

</BorderPane>
