<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finalproject.controller.CartController"
            prefWidth="900" prefHeight="600"
            stylesheets="@style.css">

    <!-- ðŸ  Header -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color:#0078D7;-fx-padding:12;">
            <Label text="ðŸ›’ Your Cart"
                   style="-fx-text-fill:white;-fx-font-size:20px;-fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ  Back to Shop" onAction="#onBackToShop"/>
            <Button text="Logout" onAction="#onLogout"/>
        </HBox>
    </top>

    <!-- ðŸ“‹ Cart Table -->
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding:20;">
