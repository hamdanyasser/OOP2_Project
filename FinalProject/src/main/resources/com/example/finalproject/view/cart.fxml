                <columns>
                    <TableColumn fx:id="colName" text="Product" prefWidth="250"/>
                    <TableColumn fx:id="colPrice" text="Price ($)" prefWidth="150"/>
                    <TableColumn fx:id="colQty" text="Quantity" prefWidth="120"/>
                    <TableColumn fx:id="colTotal" text="Subtotal ($)" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="20" alignment="CENTER_RIGHT" prefWidth="700">
                <Label text="Total:" style="-fx-font-weight:bold; -fx-font-size:16;"/>
                <Label fx:id="totalLabel" style="-fx-font-size:16; -fx-text-fill:#0078D7;"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button text="ðŸ—‘ Remove Selected" onAction="#onRemove"/>
                <Button text="âœ… Checkout" onAction="#onCheckout"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
